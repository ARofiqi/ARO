pipeline {
    agent any

    environment {
        AUTHOR = 'Ahmad Rofiqi'
        VERSION = '1.0.0'   
    }

    triggers {
        pollSCM('* * * * *') // typo tadi: trigers â†’ triggers
    }

    stages {

        stage('Check Directory') {
            steps {
                sh 'pwd'  // untuk cek direktori kerja saat ini
                sh 'ls -al'  // untuk cek isi folder
            }
        }

        stage('Install') {
            steps {
                echo 'Installing dependencies...'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                echo "Author: ${AUTHOR}"
                echo "Version: ${VERSION}"
                echo 'Start Build Project...'
                sh 'npm run build'
                echo 'Finish Build Project...'
            }
        }

        stage('Test') {
            steps {
                echo 'Start Testing...'
                echo 'No test files yet.'
                echo 'Finish Testing...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Simulasi deploy selesai! Akses di http://localhost:3000'
            }
        }
    }
}
