pipeline {
    agent any

    stages {
        stage('Install') {
            steps {
                sh "npm install"
            }
        }

        stage('Test') {
            steps {
                echo "Testing ..."
                // sh "npm test"
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
                // echo "Building file ${env.WORKSPACE}/dist"
            }
        }

        stage('Deploy') {
            steps {
                sh 'chmod +x deploy.sh'
                sh './deploy.sh'  
            }
        }
    }
}
